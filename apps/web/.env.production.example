# Production environment template for apps/web
NODE_ENV=production
PORT=3000

# API endpoint (NEXT_PUBLIC_API_URL still supported)
NEXT_PUBLIC_API_BASE_URL=https://api.thesara.space/api
# NEXT_PUBLIC_API_URL=https://api.thesara.space/api

# Public site metadata
NEXT_PUBLIC_SITE_NAME=Thesara

# Firebase (populate with production project settings)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=

# Optional limits/feature-flags
SAFE_PUBLISH_ENABLED=true
SANDBOX_SUBDOMAIN_ENABLED=false
ROOMS_ENABLED=true
